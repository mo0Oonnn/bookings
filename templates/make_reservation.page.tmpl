{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="form-row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="mt-5"><b>Бронь номера</b></h1>

            <form action="/make-reservation" method="post" novalidate class="needs-validation">
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

                <div class="form-row">

                    <div class="col">

                        <div class="form-row" id="names">
                            <div class="col">
                                <input required class="form-control" type="text" name="first_name" placeholder="Имя">
                            </div>

                            <div class="col">
                                <input required class="form-control" type="text" name="last_name" placeholder="Фамилия">
                            </div>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="form-row">

                    <div class="col">
                        <div class="form-row" id="reservation-dates">

                            <div class="col">
                                <input required class="form-control" type="text" name="start" placeholder="Дата въезда">
                            </div>

                            <div class="col">
                                <input required class="form-control" type="text" name="end" placeholder="Дата выезда">
                            </div>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="form-row">
                    <div class="col">
                        <input required class="form-control phone" type="tel" name="phone" id="phone"
                            placeholder="Номер телефона">
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col">
                        <h4><b>Выберите желаемый номер</b></h4>
                        <select class="custom-select" required name="room">
                            <option value="1">Одноместный номер</option>
                            <option value="2">Двухместный номер</option>
                            <option value="3">Семейный номер</option>
                        </select>
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-success">Искать</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{end}}