{{template "base" .}}

    {{define "content"}}
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1>About page</h1>
                    <p>Welcom to the about page</p>
                    <p>{{index .StringMap "prompt"}}</p>
                    <p>
                        {{if ne (index .StringMap "remote_ip") ""}}

                            Your remote IP adress is {{index .StringMap "remote_ip"}} 

                        {{else}}

                            I don't know your remote IP adress yet. Visit the <a href="/">Home page</a> so I can set it.

                        {{end}}
                    </p>
                </div>
            </div>
        </div>

{{end}}