{{template "base" .}}

{{define "content"}}
<div class="container">
    <div class="form-row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="mt-5"><b>Поиск свободных номеров</b></h1>

            <form action="/search-availability" method="post" novalidate class="needs-validation">
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

                <div class="form-row">

                    <div class="col">

                        <div class="form-row" id="reservation-dates">

                            <div class="col">
                                <input required class="form-control" type="text" name="start" placeholder="Дата въезда">
                            </div>

                            <div class="col">
                                <input required class="form-control" type="text" name="end" placeholder="Дата выезда">
                            </div>

                        </div>
                    </div>

                </div>

                <hr>

                <div class="row">
                    <div class="col">
                        <h4><b>Выберите желаемый номер</b></h4>
                        <select class="custom-select" required name="room">
                            <option value="Одноместный">Одноместный</option>
                            <option value="Стандартный номер с двухместной кроватью">Стандартный с двухместной кроватью
                            </option>
                            <option value="Стандартный номер с двумя кроватями">Стандартный с двумя кроватями</option>
                            <option value="Семейный номер">Семейный</option>
                        </select>
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary">Искать</button>
                    </div>
                </div>
            </form>

        </div>
    </div>

</div>
{{end}}